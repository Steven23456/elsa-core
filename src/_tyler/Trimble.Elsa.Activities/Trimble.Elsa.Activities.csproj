<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
  </PropertyGroup>
  <PropertyGroup>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <Title>Trimble Elsa Activities</Title>
    <Company>Viewpoint</Company>
    <Description>The Elsa workflow engine provides UI and programmatic tools for creating and managing workflows. This project extends the Elsa core to provide additional functionality.</Description>
    <Authors>CMS Core Services</Authors>
    <Version>1.1.13</Version>
    <AssemblyVersion>1.1.13</AssemblyVersion>
    <FileVersion>1.1.13</FileVersion>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <RepositoryUrl>https://github.com/trimble-oss/service-registry</RepositoryUrl>
    <PackageReleaseNotes>$([System.IO.File]::ReadAllText("$(MSBuildProjectDirectory)/ReleaseNotes.txt"))</PackageReleaseNotes>
    <PackAsTool>False</PackAsTool>
  </PropertyGroup>
  <ItemGroup>
    <None Update="README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>
  <ItemGroup>
    <Folder Include="Elsa.Kafka\" />
  </ItemGroup>
  <Import Project=".paket\Paket.Restore.targets" />
</Project>